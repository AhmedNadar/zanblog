/ %p= @post.title
/ %p= @post.content

/ = link_to "Edit", edit_post_path(@post)
/ = link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }


#post_show_content.skinny_wrapper.wrapper_padding
  %header
    %p.date= @post.created_at.strftime('%A, %B %d')
    %h1=@post.title
    %hr/

  #content
    = markdown @post.content

    %hr/

    #share_box
      %p Share The DO List
      / Twitter
      %a{:onclick => "javascript:window.open('http://twitter.com/share?text=#{@post.title} by @ahmednadar - &url=#{url_for([@post, {only_path: false}])}', '_blank', 'width=800, height=500, top=200, left=300');void(0);"}
        %i.fa.fa-twitter
      / Facebook
      %a{:onclick => "javascript:window.open('http://www.facebook.com/sharer.php?u=#{url_for([@post, {only_path: false}])}', '_blank', 'width=800, height=500, top=200, left=300');void(0);"}
        %i.fa.fa-facebook
      / Google Plus
      %a{:onclick => "javascript:window.open('https://plus.google.com/share?url=#{url_for([@post, {only_path: false}])}', '_blank', 'width=800, height=500, top=200, left=300');void(0);"}
        %i.fa.fa-google-plus
  %hr/

= link_to "Edit", edit_post_path(@post)
= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }