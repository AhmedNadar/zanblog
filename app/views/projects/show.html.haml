#post_show_content.skinny_wrapper.wrapper_padding
  %header
    %p.date= @project.created_at.strftime('%A, %B %d')
    %h1=@project.title
    %hr/

  #content
    = markdown @project.description
  .button_wrapper
    %a.project_button{ href: @project.link, target: "_blank", titel: @project.title } Visit #{ @project.title }


  %hr/

  #share_box
    %p Share The DO List
    / Twitter
    %a{:onclick => "javascript:window.open('http://twitter.com/share?text=#{@project.title} by @ahmednadar - &url=#{url_for([@project, {only_path: false}])}', '_blank', 'width=800, height=500, top=200, left=300');void(0);"}
      %i.fa.fa-twitter
    / Facebook
    %a{:onclick => "javascript:window.open('http://www.facebook.com/sharer.php?u=#{url_for([@project, {only_path: false}])}', '_blank', 'width=800, height=500, top=200, left=300');void(0);"}
      %i.fa.fa-facebook
    / Google Plus
    %a{:onclick => "javascript:window.open('https://plus.google.com/share?url=#{url_for([@project, {only_path: false}])}', '_blank', 'width=800, height=500, top=200, left=300');void(0);"}
      %i.fa.fa-google-plus

  %hr/

  =link_to "Edit", edit_project_path(@project)
  &nbsp;
  =link_to "Delete" , project_path(@project), method: :delete, data: { confirm: "Are you sure?" }
